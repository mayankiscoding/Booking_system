<%- include("partials/header.ejs") %>
<div class="former">
  <form action="/show/floor" method="post" class="showForm">
      <h1>BOOKINGS BASED ON FLOOR</h1>
  
      <div class="form-group col-md-6 StatDiv">
        <h4>STATUS</h4>
        <div class="form-check form-check-inline">
          <input type="radio" name="status" id="unbook" value="Not Booked">
          <label for="unbook">FREE</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="status" id="book" value="booked">
          <label for="book">BOOKED</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="status" id="all" value="*">
          <label for="all">ALL</label>
        </div>
      </div>

      <div class="radios FlrDiv">
        <h4>FLOOR</h4>
    
        <input type="radio" name="Floor" id="one" value="First">
        <label for="one">First</label>
    
        <input type="radio" name="Floor" id="two" value="Second">
        <label for="two">Second</label>
    
        <input type="radio" name="Floor" id="third" value="Third">
        <label for="third">Third</label>
    
        <input type="radio" name="Floor" id="fourth" value="Fourth">
        <label for="fourth">Fourth</label>
    
        <input type="radio" name="Floor" id="fifth" value="Fifth">
        <label for="fifth">Fifth</label>
    
        <input type="radio" name="Floor" id="sixth" value="Sixth">
        <label for="sixth">Sixth</label>
    
      </div>

      <div class="form-group col-md-7 DayDiv">
        <h4>DAY</h4>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="day" id="Mon" value="Mon">
          <label for="Mon">Mon</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="day" id="Tues" value="Tues">
          <label for="Tues">Tues</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="day" id="Wed" value="Wed">
          <label for="Wed">Wed</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="day" id="Thurs" value="Thurs">
          <label for="Thurs">Thurs</label>
        </div>
  
        <div class="form-check form-check-inline">
          <input type="radio" name="day" id="Fri" value="Fri">
          <label for="Fri">Fri</label>
        </div>
      </div>
  
      
      <button type="submit" class="btn btn-dark Srbtn">Search</button>
  
    </form>
    
  
    <div class="StatBox">
  
      <% if(locals.Result) {%>
      <% for(var i=0 ; i< Result[0].length ; i++) { %>
  
        <%const stat =  Result[0][i]["Status"] %>
  
  
        <% if(stat === "Not Booked"){ %>
          <% BoxClass = "NotBookedBox" %>
          <div class=<%= BoxClass %>>
  
            <h6><b>Class  </b><%=Result[0][i]["Room_No"] %></h6>
            <h6><b>Floor  </b><%=Result[0][i]["Floor_No"] %></h6>
            <h6><b>Start  </b><%=Result[0][i]["Start_time"] %></h6>
            <h6><b>End    </b><%=Result[0][i]["End_time"] %></h6>
          </div>
    
          
        <% }else{ %>
          <% BoxClass = "BookedBox" %>
          <div class=<%= BoxClass %>>
  
            <h6><b>Class  </b><%=Result[0][i]["Room_No"] %></h6>
            <h6><b>Floor  </b><%=Result[0][i]["Floor_No"] %></h6>
            <h6><b>Start  </b><%=Result[0][i]["Start_time"] %></h6>
            <h6><b>End    </b><%=Result[0][i]["End_time"] %></h6>
            <h6><b>Course </b><%=Result[0][i]["Course"] %></h6>
            <h6><b>Sem </b><%=Result[0][i]["Semester"] %></h6>
  
            
          </div>
    
        <% } %>
        
      <% } %>
      <% } else {%>
        <h1>Search</h1>  
      <% } %> 
    </div>